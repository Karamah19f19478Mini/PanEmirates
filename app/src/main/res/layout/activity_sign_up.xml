<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pastelgray"
    android:gravity="center"
    tools:context=".SignUp">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/nude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="1dp"
            android:background="@drawable/custom_edittext19f19478">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/darkgray"/>
            <EditText
                android:id="@+id/firstName19f19478"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext19f19478"
                android:backgroundTint="@color/verylightwhite"
                android:drawablePadding="8dp"
                android:hint="Enter First Name"
                android:padding="8dp" />
            <EditText
                android:id="@+id/secondNameText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext19f19478"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:backgroundTint="@color/verylightwhite"
                android:drawablePadding="8dp"
                android:hint="Enter Last Name" />

            <EditText
                android:id="@+id/phone19f19478"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext19f19478"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:backgroundTint="@color/verylightwhite"
                android:drawablePadding="8dp"
                android:hint="Enter Phone Number" />

            <EditText
                android:id="@+id/email19f19478"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext19f19478"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:backgroundTint="@color/verylightwhite"
                android:drawablePadding="8dp"
                android:hint="Enter Email" />

            <EditText
                android:id="@+id/setPass19f19478"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext19f19478"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:backgroundTint="@color/verylightwhite"
                android:drawablePadding="8dp"
                android:hint="Enter Password" />

            <Button
                android:id="@+id/SignUpButtonSend19f19478"
                android:layout_width="match_parent"
                android:background="@drawable/custom_edittext19f19478"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"

                android:backgroundTint="@color/darkgray"
                android:drawablePadding="8dp"
                android:text="Sign Up" />
            <TextView
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="or (Login if you're already a user)"
                android:textAlignment="center"
                android:textColor="@color/darkgray"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />

            <Button
                android:id="@+id/LoginAsUser19f19478"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/custom_edittext19f19478"
                android:backgroundTint="@color/darkgray"
                android:drawablePadding="8dp"
                android:text="Login" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

        </LinearLayout>